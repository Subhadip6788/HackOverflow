<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Accounts</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
        integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/bankaccounts.css">
</head>
<body>
    <body class="d-flex text-center text-white bg-dark">
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
            <header class="mb-auto">
                <div>
                    <h3 class="float-md-left mb-0">NO BANK FUK U</h3>
                    <nav class="nav nav-masthead justify-content-center float-md-right">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                        <a class="nav-link" href="/login">Login</a>
                        <a class="nav-link" href="/register">Register</a>
                        <a class="nav-link" href="/logout">Logout</a>
                    </nav>
                </div>
            </header>
                <main class="px-3">
                    <div class = "verify-bg">
                        <h1>Verify Your Account</h1>
                        <p class="lead">Welcome to KnowMe! <br> Jump right in and explore our many benefits. <br>
                        But First you need to verify yourself!</p>
                        <div class="btn-group">
                            <div id = "btn-space" class="btn-group">
                                <button id = "method-name" class="btn btn-secondary btn-lg dropdown-toggle drop-button drop-txt" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Choose Method
                                </button>
                                <button id = "hiddenbtn" type="button" class="btn btn-secondary" hidden>Go!</button>
                                <ul class="dropdown-menu">
                                    <div class="list-group">
                                        <button type="button" id = "adhaar" class="list-group-item list-group-item-action">Aadhaar Card</button>
                                        <button type="button" id = "pan" class="list-group-item list-group-item-action">Pan Card</button>
                                        <button type="button" id = "knowme" class="list-group-item list-group-item-action">KnowMe</button>
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>
                </main>
            <footer class="mt-auto text-white-50">
                <p>&copy; 2022 </p>
            </footer>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
            integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" 
            crossorigin="anonymous"></script>
        <script>
            const characters ='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            function generateString(length) {
                let result = '';
                const charactersLength = characters.length;
                for ( let i = 0; i < length; i++ ) {
                    result += characters.charAt(Math.floor(Math.random() * charactersLength));
                }
                return result;
            }
            const adhaar = document.getElementById('adhaar');
            const pan = document.getElementById('pan');
            const knowme = document.getElementById('knowme');
            const mainbtn = document.getElementById('method-name');
            adhaar.addEventListener('click', handleClick => {
                mainbtn.innerText = adhaar.innerText;
                const hiddenbtn = document.getElementById("hiddenbtn");
                hiddenbtn.removeAttribute("hidden");
                // document.getElementById("btn-space").innerHTML += '<button type="button" class="btn btn-secondary">Go!</button>';
            })
            pan.addEventListener('click', handleClick => {
                mainbtn.innerText = pan.innerText;
                const hiddenbtn = document.getElementById("hiddenbtn");
                hiddenbtn.removeAttribute("hidden");
                // document.getElementById("btn-space").innerHTML += '<button type="button" class="btn btn-secondary">Go!</button>';
            })
            knowme.addEventListener('click', handleClick => {
                mainbtn.innerText = knowme.innerText;
                const hiddenbtn = document.getElementById("hiddenbtn");
                hiddenbtn.removeAttribute("hidden");
                // document.getElementById("btn-space").innerHTML += '<button type="button" class="btn btn-secondary">Go!</button>';
            })
            document.getElementById("hiddenbtn").addEventListener('click', handleClick => {
                if(document.getElementById("method-name").innerText == "KnowMe") {
                    window.location = "https://example.com?callback=" + location.href + "redirect&nonce=" + generateString(10) + "";
                }
            })
        </script>
</body>
</html>